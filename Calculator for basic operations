#include<iostream>
#include<conio.h>
#include<math.h>
using namespace std;
int main()
{
    float n1,n2,r;
    int ch;
    cout<<"Enter the choice \n 1.Addition \n 2. subtraction \n 3. Mutiply  \n 4. Division "<<endl;
    cin>>ch;
    /*Seeking input about the operation to be performed */
    cout<<"\n Enter the numbers n1 & n2 respectively";
    cin>>n1>>n2;
    /*Using the variables to input the numbers*/
    if(ch==1)
    {
        r=n1+n2;
    }
    else if(ch==2)
    {
        r=n1-n2;
    }
    else if(ch==3)
    {
        r=n1*n2;
    }
    else if(ch==4)
    {
        r=n1/n2;
    }
    else 
    cout<<"\n Invalid input";
    cout<<"\n Desired output is"<<" "<<r<<endl;
    return 0;
}
